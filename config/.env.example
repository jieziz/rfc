# RFC Auto Grabber 配置文件示例
# 复制此文件为 .env 并填入您的实际配置

# ================================
# 必填配置项
# ================================

# 邮箱账号
EMAIL=your_email@example.com

# 密码
PASSWORD=your_password

# 商品URL (包含PID)
PRODUCT_URL=https://my.rfchost.com/cart.php?a=add&pid=229

# 登录页面URL
LOGIN_URL=https://my.rfchost.com/clientarea.php

# 基础URL (可选，会自动从PRODUCT_URL提取)
BASE_URL=https://my.rfchost.com

# ================================
# 性能配置 (可选)
# ================================

# 无头模式 (不显示浏览器窗口)
HEADLESS_MODE=True

# 操作延迟时间 (秒)
DELAY_TIME=0.3

# 库存检查间隔 (秒)
STOCK_CHECK_INTERVAL=0.2

# 并发浏览器数量
CONCURRENT_BROWSERS=3

# 最大重试次数
MAX_RETRIES=3

# 元素等待超时 (秒)
ELEMENT_TIMEOUT=3

# 页面加载超时 (秒)
PAGE_LOAD_TIMEOUT=15

# 页面加载等待时间 (秒)
PAGE_LOAD_WAIT=1

# 元素操作等待时间 (秒)
ELEMENT_WAIT=0.3



# 快速模式
FAST_MODE=True

# ================================
# 高级配置 (可选)
# ================================

# 促销代码
PROMO_CODE=

# 代理设置
USE_PROXY=False
PROXY_HOST=127.0.0.1
PROXY_PORT=8080
PROXY_USERNAME=
PROXY_PASSWORD=

# 通知设置
ENABLE_EMAIL_NOTIFICATION=False
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
NOTIFICATION_EMAIL=notify@example.com

# 微信通知
ENABLE_WECHAT_NOTIFICATION=False
WECHAT_WEBHOOK_URL=

# Telegram通知
ENABLE_TELEGRAM_NOTIFICATION=False
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# 数据库配置
ENABLE_DATABASE=False
DATABASE_URL=sqlite:///grabber_history.db

# ================================
# 调试配置 (可选)
# ================================

# 调试模式
DEBUG_MODE=False

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 保存截图
SAVE_SCREENSHOTS=False

# 详细日志
VERBOSE_LOGGING=False

# ================================
# 浏览器配置 (可选)
# ================================

# 浏览器类型 (chrome, firefox, edge)
BROWSER_TYPE=chrome

# 浏览器路径 (留空使用默认)
BROWSER_PATH=

# 用户数据目录
USER_DATA_DIR=

# 自定义User-Agent
CUSTOM_USER_AGENT=

# 窗口大小
WINDOW_WIDTH=1920
WINDOW_HEIGHT=1080

# ================================
# 网络配置 (可选)
# ================================

# 请求超时 (秒)
REQUEST_TIMEOUT=30

# 连接超时 (秒)
CONNECT_TIMEOUT=10

# 重试间隔 (秒)
RETRY_INTERVAL=1

# 最大连接数
MAX_CONNECTIONS=10

# ================================
# 安全配置 (可选)
# ================================

# 随机延迟范围 (秒)
RANDOM_DELAY_MIN=0.1
RANDOM_DELAY_MAX=0.5

# 模拟人类行为
SIMULATE_HUMAN_BEHAVIOR=True

# 反检测模式
ANTI_DETECTION_MODE=True

# ================================
# 监控配置 (可选)
# ================================

# 性能监控
ENABLE_PERFORMANCE_MONITORING=True

# 统计间隔 (秒)
STATS_INTERVAL=10

# 保存统计数据
SAVE_STATS=True

# 统计文件路径
STATS_FILE=stats.json

# ================================
# 说明
# ================================

# 网络环境建议:
# 
# 网络良好 (延迟 < 20ms):
# DELAY_TIME=0.1
# STOCK_CHECK_INTERVAL=0.1
# CONCURRENT_BROWSERS=5
#
# 网络一般 (延迟 20-50ms):
# DELAY_TIME=0.3
# STOCK_CHECK_INTERVAL=0.2
# CONCURRENT_BROWSERS=3
#
# 网络较差 (延迟 > 50ms):
# DELAY_TIME=0.5
# STOCK_CHECK_INTERVAL=0.5
# CONCURRENT_BROWSERS=1
